  },
  "homepage": "https://github.com/dxshim90/Devipedia#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.8",
    "redux": "^4.0.1",
    "request": "^2.88.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.1",
